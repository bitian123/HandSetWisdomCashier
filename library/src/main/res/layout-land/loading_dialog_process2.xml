<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/trading_window_bg"
    android:fitsSystemWindows="true">

    <LinearLayout android:layout_width="250pt"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_frame1">
        <ImageView
            android:id="@+id/loadingPic"
            android:layout_marginTop="40pt"
            android:layout_width="69pt"
            android:layout_height="23pt"/>

        <TextView
            android:id="@+id/displayInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="18pt"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="25pt"
            android:text=""
            android:textColor="#333333"
            android:textSize="14pt" />
    </LinearLayout>

</LinearLayout>