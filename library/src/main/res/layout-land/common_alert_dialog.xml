<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg_popup"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/hint_icon_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pic_warn"/>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="320dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/dialog_title"
                style="@style/BaseText.Tip"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:layout_marginTop="@dimen/margin_40"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/font_black"
                android:textSize="30sp"
                />

            <TextView
                android:id="@+id/dialog_time"
                style="@style/BaseText.Tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_40"
                android:gravity="center"
                android:text=""
                android:textColor="@color/font_black"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_60"
            android:paddingRight="@dimen/margin_60">

            <TextView
                android:id="@+id/dialog_msg"
                style="@style/BaseText.Tip.Dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="内容内容时发生地方发生的放水电费水电费是否"
                android:textColor="@color/font_tip_info"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/margin_200"
            android:paddingEnd="0dp">

            <!--style="@style/BaseButton.Negative"-->
            <Button
                android:id="@+id/negative_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="end|center_vertical"
                android:text="@string/label_cancel"
                android:textColor="@color/font_tip"
                android:textSize="30sp" />

            <Button
                android:id="@+id/positive_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="@string/label_confirm"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>