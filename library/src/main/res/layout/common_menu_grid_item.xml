<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:paddingBottom="12dp"
    android:background="@drawable/btn_home_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/menu_icon_show"
        style="@style/MenuGridItemIcon"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/menu_text_show"
        style="@style/MenuGridItemText"
        android:layout_height="match_parent"
        android:lines="2"
        android:textColor="@color/common_menu_item_color_bg"
        android:textSize="@dimen/font_32"
        android:gravity="top|center_vertical"
        android:layout_marginTop="@dimen/margin_24"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="false"/>
</LinearLayout>