<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>


    <TextView
        android:id="@+id/textView"
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_marchant_number"/>

    <EditText
        android:id="@+id/extxt_marchant_number"
        style="@style/ConfigureItemTextStyle.Edit"
        android:maxLength="15"/>


    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_bank_term_number"/>

    <EditText
        android:id="@+id/extxt_bank_term_no"
        style="@style/ConfigureItemTextStyle.Edit"
        android:maxLength="8"/>


    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_merchant_name"/>

    <EditText
        android:id="@+id/extxt_merchant_name"
        style="@style/ConfigureItemTextStyle.Edit"
            android:inputType="text"/>

    <TextView
            style="@style/ConfigureItemTextStyle"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_30"
            android:text="@string/label_merchant_name_english"/>

    <EditText
            android:id="@+id/extxt_merchant_name_english"
            style="@style/ConfigureItemTextStyle.Edit"
            android:inputType="textVisiblePassword"/>

    <Button
            android:onClick="onSureClick"
            style="@style/ConfigureItemLayoutStyle.Button" />
</LinearLayout>