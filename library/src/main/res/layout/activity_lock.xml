<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/pic_lock"/>
    <TextView
        android:id="@+id/text1"
        style="@style/BaseText.Tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_32"
        android:layout_marginTop="@dimen/margin_100"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/font_black"
        android:text="@string/tips_had_bean_lock"/>
    <TextView
        android:id="@+id/text2"
        style="@style/BaseText.Tip"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_below="@+id/text1"
        android:text="账号："
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"/>
    <EditText
        android:id="@+id/et_opt_id"
        style="@style/BaseEditBox.Number"
        android:layout_below="@+id/text2"
        android:layout_marginTop="@dimen/margin_10"
        android:maxLength="2"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"/>
    <TextView
        android:id="@+id/text3"
        style="@style/BaseText.Tip"
        android:layout_below="@+id/et_opt_id"
        android:layout_marginTop="@dimen/margin_20"
        android:text="密码："
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"/>
    <EditText
        android:id="@+id/et_opt_psw"
        style="@style/BaseEditBox.Number"
        android:layout_below="@+id/text3"
        android:layout_marginTop="@dimen/margin_10"
        android:inputType="textPassword"
        android:maxLength="8"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"/>

    <Button android:layout_below="@+id/et_opt_psw"
            android:layout_marginTop="@dimen/margin_40"
        android:id="@+id/unlock" style="@style/ConfigureItemLayoutStyle.Button" />
</RelativeLayout>