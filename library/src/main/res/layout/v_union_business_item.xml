<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/mTvRoomId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/mTvBillId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="地址"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvMoneyType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="款项名称"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="姓名"
            android:textColor="@color/tip4D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvUnpaidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="应收金额"
            android:textColor="@color/tip4D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvPaidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="已收金额"
            android:textColor="@color/tip4D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvAmtReceivable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="本次应收"
            android:textColor="@color/tip4D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mTvSettleNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_business_item_margin_top"
            android:text="结算帐户结"
            android:textColor="@color/tip4D"
            android:textSize="13sp" />

        <LinearLayout
            style="@style/mw_style"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTvPayAmountTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_business_item_margin_top"
                android:text="本次付款金额: "
                android:textColor="@color/tip4D"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mEtPayAmount"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_business_item_margin_top"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:minWidth="30dp"
                android:paddingRight="5dp"
                android:text="0.00 元"
                android:textColor="@color/tip4D"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>