<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              style="@style/TradeFragment"
              android:background="@color/common_bg">

    <include layout="@layout/common_title_layout"/>

    <TextView
        style="@style/BaseText.Tip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_50"
        android:text="@string/tip_confirm_origin_info"/>

    <!--android:background="@drawable/form" 删掉-->
    <LinearLayout
        android:id="@+id/info_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_60"

        android:orientation="vertical"
        android:background="@color/common_main_bg">

    </LinearLayout>

    <Button
        android:id="@+id/positive_btn"
        style="@style/BaseButton.Positive"
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_marginRight="@dimen/margin_40"
        android:layout_marginTop="@dimen/margin_60"/>
</LinearLayout>