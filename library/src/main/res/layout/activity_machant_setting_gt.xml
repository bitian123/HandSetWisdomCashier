<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bg_menu_sys">

    <RelativeLayout style="@style/mw_style"
        android:layout_marginTop="25dp">
        <ImageView style="@style/ww_style"
            android:background="@drawable/gt_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="16dp"/>
        <TextView style="@style/ww_style"
            android:text="终端管理系统"
            android:textColor="#004E2B"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout style="@style/mw_style"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginBottom="20dp">
        <TextView style="@style/ww_style"
            android:text="商户信息"
            android:textColor="@color/font_black"
            android:layout_centerVertical="true"
            android:textSize="21sp"/>

        <RelativeLayout android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/mBtnReturn"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_frame6"
            android:layout_alignParentRight="true">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_return2"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout style="@style/mw_style"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="28dp"
        android:background="@drawable/bg_frame1"
        android:paddingBottom="28dp">
        <TextView
            android:id="@+id/textView"
            style="@style/ww_style"
            android:text="商户名"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/extxt_merchant_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:background="@null"
            android:gravity="right"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/ww_style"
            android:layout_below="@id/textView"
            android:layout_marginTop="24dp"
            android:text="商户号"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/extxt_marchant_number"
            android:layout_width="200dp"
            android:layout_below="@id/textView"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:background="@null"
            android:gravity="right"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

        <TextView
            style="@style/ww_style"
            android:layout_below="@id/textView2"
            android:layout_marginTop="24dp"
            android:text="终端号"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/extxt_bank_term_no"
            android:layout_width="200dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:gravity="right"
            android:background="@null"
            android:textColor="@color/tip4D"
            android:textSize="16sp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/extxt_merchant_name_english"
        style="@style/ConfigureItemTextStyle.Edit"
        android:inputType="textVisiblePassword"
        android:visibility="gone"/>

    <RelativeLayout style="@style/mm_style">
        <TextView style="@style/ww_style"
            android:id="@+id/mHotLine"
            android:text="4007008010"
            android:textColor="#004E2B"
            android:drawableLeft="@drawable/sys_hotline_icon"
            android:drawablePadding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"/>
    </RelativeLayout>




</LinearLayout>