<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_popup"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:minHeight="312dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_44"
           android:layout_gravity="center_horizontal"
            android:text="确认信息"
            android:textColor="@color/font_black"
            android:textSize="@dimen/font_40" />


         <LinearLayout
             android:layout_marginLeft="23dp"
             android:layout_marginRight="23dp"
             android:layout_marginTop="30dp"
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/tip"
                 android:textSize="14sp"
                 android:text="购房人姓名："/>
             <TextView
                 android:id="@+id/tv_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="14sp"
                 android:textColor="@color/font_black"
                 android:text="张三"/>

         </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tip"
                android:textSize="14sp"
                android:text="购房人证件号："/>
            <TextView
                android:id="@+id/tv_id_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/font_black"
                android:text="123456789012345678"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tip"
                android:textSize="14sp"
                android:text="合同编号："/>
            <TextView
                android:id="@+id/tv_contract_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/font_black"
                android:text="1234567890"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tip"
                android:textSize="14sp"
                android:text="合同价格："/>
            <TextView
                android:id="@+id/tv_contract_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/font_black"
                android:text="234.00"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/font_black"
                android:layout_marginLeft="6dp"
                android:text="元"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity=""
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingEnd="0dp">

            <!--style="@style/BaseButton.Negative"-->


            <Button
                android:id="@+id/positive_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28.5dp"
                android:background="@drawable/btn_login_bg"
                android:gravity="center"
                android:text="@string/label_confirm"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_32" />
            <Button
                android:id="@+id/negative_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginBottom="0dp"
                android:background="@drawable/btn_login_gray1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="28.5dp"
                android:gravity="center"
                android:text="@string/label_cancel"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_32" />

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>