<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
            >
    <ImageView
        android:id="@+id/hint_icon_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_120"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/hint_icon_pay_pass_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="@dimen/margin_80"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/hint_text_show"
            style="@style/BaseText.Tip.Dark"
            android:layout_marginLeft="@dimen/margin_80"
            android:textColor="@color/font_tip_check_card"
            android:textSize="@dimen/font_32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

</LinearLayout>