<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg_popup"
             android:orientation="vertical">

    <ImageView
        android:id="@+id/hint_icon_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/pic_lock"/>

    <LinearLayout
        android:layout_width="@dimen/dialog_lock_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_40"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_60"
        android:paddingRight="@dimen/margin_60">

        <TextView
            android:id="@+id/dialog_msg"
            style="@style/BaseText.Tip.Dark"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/font_32"
            android:layout_marginTop="@dimen/margin_100"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:text="@string/tips_had_bean_lock"/>
        <TextView
            android:id="@+id/text2"
            style="@style/BaseText.Tip"
            android:layout_marginTop="@dimen/margin_60"
            android:text="账号："/>
        <EditText
            android:id="@+id/et_opt_id"
            style="@style/BaseEditBox.Number"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/font_36"
            android:maxLength="2"/>
        <TextView
            android:id="@+id/text3"
            style="@style/BaseText.Tip"
            android:layout_marginTop="@dimen/margin_20"
            android:text="密码："/>
        <EditText
            android:id="@+id/et_opt_psw"
            style="@style/BaseEditBox.Number"
            android:layout_marginTop="@dimen/margin_10"
            android:inputType="numberPassword"
            android:textSize="@dimen/font_36"
            android:maxLength="8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:orientation="horizontal">



            <Button
                android:id="@+id/unlock"
                android:layout_marginTop="@dimen/margin_40"
                android:layout_marginBottom="@dimen/margin_40"
                style="@style/BaseButton.Positive"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>