<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        style="@style/TradeFragment">

    <include layout="@layout/common_title_layout"/>

    <LinearLayout
        android:id="@+id/ll_card_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_36"
        android:visibility="visible">

        <TextView
            style="@style/BaseText.Tip"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"
            android:text="@string/plz_input_card_No" />

        <EditText
            android:id="@+id/et_card_number"
            style="@style/BaseEditBox.Number"
            android:layout_marginTop="@dimen/margin_20"
            android:maxLength="@integer/card_number_max_len"
            android:paddingBottom="@dimen/margin_20"
             android:textSize="@dimen/font_60" />

        <LinearLayout
            android:id="@+id/input_card_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/BaseText.Tip"
                android:layout_marginTop="@dimen/margin_50"
                android:text="@string/pls_input_card_valide_date" />

            <EditText
                android:id="@+id/et_card_valid"
                style="@style/BaseEditBox.Number"
                android:layout_marginTop="@dimen/margin_20"
                android:maxLength="@integer/date_max_len"
                android:textSize="@dimen/font_36"/>

        </LinearLayout>

        <Button
            android:id="@+id/positive_btn"
            style="@style/BaseButton.Positive"
            android:layout_marginLeft="@dimen/margin_60"
            android:layout_marginRight="@dimen/margin_60"
            android:layout_marginTop="@dimen/margin_60" />

    </LinearLayout>

</LinearLayout>