<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_menu_sys">

    <RelativeLayout style="@style/mw_style"
        android:layout_marginTop="25dp">
        <ImageView style="@style/ww_style"
            android:background="@drawable/gt_logo"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"/>
        <TextView style="@style/ww_style"
            android:text="终端管理系统"
            android:textColor="#004E2B"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout style="@style/mw_style"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginBottom="20dp">
        <TextView style="@style/ww_style"
            android:text="修改密码"
            android:textColor="@color/font_black"
            android:layout_centerVertical="true"
            android:textSize="21sp"/>

        <TextView style="@style/ww_style"
            android:id="@+id/mTvShowID"
            android:text="操作员号"
            android:textColor="@color/font_black"
            android:layout_centerInParent="true"
            android:textSize="16sp"/>

        <RelativeLayout android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/mBtnReturn"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_frame6"
            android:layout_alignParentRight="true">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:gravity="center"
                android:padding="5dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/icon_return2"/>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout style="@style/mw_style"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="28dp"
        android:background="@drawable/bg_frame5"
        android:paddingBottom="28dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView style="@style/ww_style"
            android:id="@+id/mIv1"
            android:background="@drawable/icon_modity_pw1"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/edtxt_old_pwd"
            style="@style/ChangePwdMSNItemStyle.EdtxtStyle"
            android:layout_height="wrap_content"
            android:hint="请输入原密码"
            android:layout_toRightOf="@id/mIv1"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/textview_under_line_style"/>

        <ImageView style="@style/ww_style"
            android:id="@+id/mIv2"
            android:layout_marginTop="40dp"
            android:layout_below="@id/mIv1"
            android:background="@drawable/icon_modity_pw2"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/edtxt_new_pwd"
            style="@style/ChangePwdMSNItemStyle.EdtxtStyle"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:layout_marginTop="40dp"
            android:layout_below="@id/mIv1"
            android:layout_toRightOf="@id/mIv2"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/textview_under_line_style"/>

        <ImageView style="@style/ww_style"
            android:id="@+id/mIv3"
            android:layout_marginTop="40dp"
            android:layout_below="@id/mIv2"
            android:background="@drawable/icon_modity_pw3"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/edtxt_renew_pwd"
            style="@style/ChangePwdMSNItemStyle.EdtxtStyle"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:layout_marginTop="40dp"
            android:layout_below="@id/mIv2"
            android:layout_toRightOf="@id/mIv3"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/textview_under_line_style"/>

    </RelativeLayout>

    <TextView android:layout_width="145dp"
        android:layout_height="50dp"
        android:onClick="onChangePwd"
        android:text="修改"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_login_bg"
        android:textColor="@color/font_white"/>

    <RelativeLayout style="@style/mm_style">
        <TextView style="@style/ww_style"
            android:id="@+id/mHotLine"
            android:text="4007008010"
            android:textColor="#004E2B"
            android:drawableLeft="@drawable/sys_hotline_icon"
            android:drawablePadding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"/>
    </RelativeLayout>

</LinearLayout>