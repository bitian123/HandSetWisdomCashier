<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout" />


    <TextView
        android:id="@+id/textView"
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_50"
        android:text="@string/label_configure_apn_access" />

    <EditText
        android:id="@+id/et_apn_access"
            style="@style/ConfigureItemTextStyle.Edit"
            android:inputType="text"/>


    <TextView
        style="@style/ConfigureItemTextStyle"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_30"
        android:text="@string/label_configure_apn_username" />

    <EditText
        android:id="@+id/et_apn_username"
        style="@style/ConfigureItemTextStyle.Edit"
            android:inputType="text"/>

    <TextView
            style="@style/ConfigureItemTextStyle"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:text="@string/label_configure_apn_password" />

    <EditText
            android:id="@+id/et_apn_password"
            style="@style/ConfigureItemTextStyle.Edit"
            android:inputType="text" />

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_50"
            android:gravity="center_vertical">

        <TextView
                android:id="@+id/textView3"
                style="@style/ConfigureItemTextStyle"
                android:text="@string/label_configure_apn_enable"/>

        <CheckBox
                android:layout_marginRight="@dimen/margin_60"
                android:id="@+id/et_apn_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_alignParentRight="true"
                android:button="@drawable/sel_toggle"/>
    </RelativeLayout>

    <Button
        android:onClick="onSureClick"
        style="@style/ConfigureItemLayoutStyle.Button" />

</LinearLayout>