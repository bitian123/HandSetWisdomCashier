<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_300"
    android:background="@drawable/bg_result_suc">

    <ImageButton
        android:id="@+id/imgbtn_back"
        android:layout_width="@dimen/ic_back_width"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/sel_back_btn"
        android:layout_marginTop="@dimen/margin_70"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_white"
        android:layout_marginTop="@dimen/margin_80"
        android:textSize="@dimen/font_title"
        android:layout_centerHorizontal="true"
        android:text=""/>

    <Button
        android:id="@+id/btn_title_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/btn_exit_bg"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:onClick="onRightButtonClick"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_36"
        android:visibility="gone"
        android:layout_alignTop="@+id/imgbtn_back"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imgbtn_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingStart="80dp"
        android:src="@drawable/menu_sao"
        android:background="@null"
        android:visibility="gone"
        android:layout_alignTop="@+id/txtvw_title"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/title_pic_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageView_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_menu_main"
        android:visibility="gone"
        android:layout_alignBottom="@+id/txtvw_title"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
