<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="horizontal">
    <!--android:paddingLeft="@dimen/margin_30"-->
    <!--android:paddingRight="@dimen/margin_30"-->
    <TextView
        android:id="@+id/item_name_show"
        style="@style/BaseText"
        android:layout_width="@dimen/height_100"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:minHeight="@dimen/result_info_item_height"
        android:paddingBottom="@dimen/margin_14"
        android:paddingTop="@dimen/margin_14"
        android:textColor="@color/font_tip"
        android:textSize="@dimen/font_32" />
    <View
        android:layout_width="@dimen/common_divider_size"
        android:layout_height="match_parent"
        android:background="@color/common_divider"
        style="@style/common_visibility_ctrl"/>


    <TextView
        android:id="@+id/item_value_show"
        style="@style/BaseText"
        android:layout_width="@dimen/height_100"
        android:layout_weight="2.7"
        android:gravity="start|center_vertical"
        android:minHeight="@dimen/result_info_item_height"
        android:paddingBottom="@dimen/margin_14"
        android:paddingLeft="@dimen/margin_30"
        android:paddingRight="@dimen/margin_30"
        android:paddingTop="@dimen/margin_14"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_32"/>

</LinearLayout>